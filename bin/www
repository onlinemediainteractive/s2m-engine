#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('s2m-eng:server');
var http = require('http');
var db = require('..//lib/data_store/mysql');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = {}; //http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

app.on('stormpath.ready', function () {
  console.log("Stormpath Start Up Complete");
  server =  http.createServer(app);
  db.ping().then(function(rows) {
    console.log('Data Store Start Up Complete')
    server.listen(port);
    server.on('error', onError);
    server.on('listening', onListening);
  }).catch(function(err) {
    console.log("Data Store Start Up Failed :" + err);
    console.log(" ");
    console.log("Exiting Server Start Up Process");
    process.exit(1);
  })
  ;

 // db.ping().then(function(r) {
 //   console.log("Data Store Start Up Complete");
 // }).catch( function(err) {
 //   console.log("Data Store Start Up Failed :" + err);
 // });

});

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log('Http Server Ready Listening on ' + bind );
}
